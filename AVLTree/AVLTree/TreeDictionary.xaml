<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AVLTree"
                    xmlns:avlTree="clr-namespace:AVLTree.AvlTree">
    <DataTemplate x:Key="NodeItemTemplate">
        <Grid>
            <Ellipse
                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stroke="Red" StrokeThickness="3">
                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="18" Direction="-20" ShadowDepth="12" />
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="{Binding Path=ValueString}"/>
        </Grid>
    </DataTemplate>    
</ResourceDictionary>